# Uncomment the next line to define a global platform for your project
# platform :ios, '9.0'

# 如果不使用swift并且不想使用动态框架，下一行需要注释掉
use_frameworks!


# LibRoot库用到
target 'LibRoot' do
  # 响应式编程
  pod 'RxSwift'
  pod 'RxCocoa'

  # UI布局
  # pod 'SnapKit'
  
  # 网络请求
  pod 'Alamofire'
  pod 'RxAlamofire'
  
  # JSON
  pod 'ObjectMapper'
  
  # 设备信息
  pod 'DeviceKit'
  
  # 本地(偏好) 存储(明文)
  pod 'DefaultsKit'
  # 钥匙串 存储(密文)
  pod 'KeychainSwift'
  
  #MD5
  pod 'SwiftHash'
  
  #提示(吐司)
  pod 'SVProgressHUD'
  
  #空页面
  pod 'DZNEmptyDataSet'
  
  #扫描条码和二维码
  pod 'swiftScan'

  #屏幕侧滑返回手势
  pod 'FDFullscreenPopGesture'
end
